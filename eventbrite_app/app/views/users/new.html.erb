<%= form_for @user do |f| %>
  <ul>
    <li>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>

    <li>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </li>

    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>

    <li>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </li>

      <%= f.submit "Create myself"%>
  </ul>

<% end %>